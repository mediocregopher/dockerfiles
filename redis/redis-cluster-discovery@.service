[Unit]
Description=redis-cluster-discovery-%i
BindsTo=redis-cluster@%i.service

[Service]
EnvironmentFile=/etc/environment
ExecStart=/bin/sh -c "while true; do sh /home/core/redis-cluster-discovery.sh %i; sleep 45; done"
ExecStop=/usr/bin/etcdctl rm /services/redis-cluster-%i

[X-Fleet]
X-ConditionMachineOf=redis-cluster@%i.service
